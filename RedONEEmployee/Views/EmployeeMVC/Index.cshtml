@using RedONEEmployee.Data
@model List<Employee>

<h1 class="text-center text-primary mt-6">RedONE Employees</h1>

<div class="container mt-6">
    <div class="row">
        @foreach (var e in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Employee ID: @e.EmployeeId</h5>
                        <p class="card-text">Name: @e.EmployeeName</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
